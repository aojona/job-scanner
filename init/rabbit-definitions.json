{
  "vhosts": [
    {
      "name": "/"
    }
  ],
  "users": [
    {
      "name": "user",
      "password": "pass",
      "tags": "administrator"
    }
  ],
  "permissions": [
    {
      "user": "user",
      "vhost": "/",
      "configure": ".*",
      "write": ".*",
      "read": ".*"
    }
  ],
  "queues": [
    {
      "name": "scheduled-tasks-queue",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {
        "x-queue-type": "classic"
      }
    },
    {
      "name": "vacancy-storage-queue",
      "vhost": "/",
      "durable": true,
      "auto_delete": false,
      "arguments": {
        "x-queue-type": "classic"
      }
    }
  ],
  "exchanges": [
    {
      "name": "job-scanner-exchange",
      "vhost": "/",
      "type": "direct",
      "durable": true,
      "auto_delete": false,
      "internal": false,
      "arguments": {}
    }
  ],
  "bindings": [
    {
      "source": "job-scanner-exchange",
      "vhost": "/",
      "destination": "scheduled-tasks-queue",
      "destination_type": "queue",
      "routing_key": "scheduled-key",
      "arguments": {}
    },
    {
      "source": "job-scanner-exchange",
      "vhost": "/",
      "destination": "vacancy-storage-queue",
      "destination_type": "queue",
      "routing_key": "vacancy-storage-key",
      "arguments": {}
    }
  ]
}